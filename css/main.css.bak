/*CSS mall för Alexander Midjichs projektarbete*/
/*Denna del är den allmänna CSS-koden*/

body {
	background: #edeff0;
		
	}

h2 {
	font-size: 2.4em;
	font-weight: 400;
	margin-bottom: 8px;
	color: #384047;
	line-height: 1.2;
}

header nav {
	display: flex;
	justify-content: flex-end;
}

p {
	color: #8d9aa5;
	font-size: 1.0em;
	margin-bottom: 10px;
	line-height: 1.4;
}

.content {
	box-sizing: border-box;
	width: 90%;
	max-width: auto;
	background: #ffffff;
	padding: 10px 15px;
	margin: 0 auto;
	position: relative;
	overflow: hidden;
	border-radius: 5px;
	-webkit-box-shadow: 0 1px 0 0 rgba(0, 0, 0, 0.1);
	-moz-box-shadow: 0 1px 0 0 rgba(0, 0, 0, 0.1);
	box-shadow: 0 1px 0 0 rgba(0, 0, 0, 0.1);
}

/*CSS för index.html*/
.jumbotron {
	display: flex;
  	align-items: center;
  	background-image: url("../img/jumbo.jpg");
  	background-size: cover;
  	color: #ffffff;
  	height: 500px;
  	text-shadow: 0.25px 0.25px 0.25px #000;
}

.jumbotron h2 {
	font-size: 60px;
	font-weight: 700;
	margin: 0;
	color: #fff;
}

.jumbotron h3 {
	margin: 0 0 20px;
	color: #fff;
}

.footer {
	padding-top: 5px;
}
.btn-circle.btn-xl {
  width: 70px;
  height: 70px;
  padding: 16px 11px;
  font-size: 24px;
  line-height: 1.33;
  border-radius: 35px;
}
/*CSS som används till JS-sliden i steg 1*/
/*Med hjälp av CSS skapar vi ett utrymme för sliden*/

#slides {
	position: relative;
	height: 300px;
	padding: 0px;
	margin: 0px;
	list-style-type: none;
}

.slide {
	position: absolute;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	opacity: 0;
	z-index: 1;

	-webkit-transition: opacity 1s;
	-moz-transition: opacity 1s;
	-o-transition: opacity 1s;
	transition: opacity 1s;
}

.showing {
	opacity: 1;
	z-index: 2;
}

.slide {
	font-seize: 40px;
	padding: 40px;
	box-sizing: border-box;
	background: #333;
	color: #fff;
}

.slide:nth-of-type(1){
	background: blue;
}
.slide:nth-of-type(2){
	background: blue;
}
.slide:nth-of-type(3){
	background: blue;
}
.slide:nth-of-type(4){
	background: blue;
}


